<input type="text" id="user" />
<input type="text" id="message" />
<input type="button" value="send" id="send" />
<input type="button" value="finish work" id="finish" />
<div id='messages'></div>
<script type="text/jscript">
    function DoWork() {
        var sum = 0;
        for (var j = 0; j < 3000; j++)
            for (var i = 0; i < 10000000; i++) { sum++; sum--; }
    };
</script>

<script type="text/javascript">
    var isBusy = "w2 able";
    var socket,
        $txt = document.getElementById('message'),
        $user = document.getElementById('user'),
        $messages = document.getElementById('messages');

    if (typeof (WebSocket) !== 'undefined') {
        socket = new WebSocket("ws://localhost:57032/WorkersHandler.ashx");
    } else {
        socket = new MozWebSocket("ws://localhost:57032/WorkersHandler.ashx");
    }

    socket.onmessage = function (msg) {
        if (msg.data == "status")
            socket.send(isBusy);
        else {
            var $el = document.createElement('p');
            $el.innerHTML = msg.data;
            $messages.appendChild($el);

            isBusy = "false";
            alert("start work");
            DoWork();
            alert("end work");
            socket.send("Worker2 has done his work");
            isBusy = "w2 able";
        }
    };

    socket.onclose = function (event) {
        alert('Мы потеряли её. Пожалуйста, обновите страницу');
    };

    document.getElementById('send').onclick = function () {
        socket.send($user.value + ' : ' + $txt.value);
        $txt.value = '';
    };
    document.getElementById('finish').onclick = function () {
        alert("start work");
        DoWork();
        alert("end work");
        socket.send("Worker2 has done his work");
    };
</script>

